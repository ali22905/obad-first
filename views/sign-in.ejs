<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- normalize css  -->
    <link rel="stylesheet" href="/normalize.css" />
    <!-- main css  -->
    <link rel="stylesheet" href="/awl.css" />
    <!-- font awesome  -->
    <link rel="stylesheet" href="/webfonts/all.min.css" />
    <!-- Work sans font  -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Work+Sans:ital,wght@0,400;0,500;0,600;0,700;0,800;0,900;1,300;1,500&display=swap"
      rel="stylesheet"
    />
    <title>sign-in page</title>
  </head>
  <body>
    <!-- Start contact -->
    <div class="contact">
      <div class="container">
        <div class="sign-in">
          <h1>sign up</h1>
          <!-- <div class="icons">
            <i class="fa-brands fa-linkedin-in"></i>
            <i class="fa-brands fa-github"></i>
            <i class="fa-brands fa-facebook"></i>
          </div> -->
          <form id="login" action="/home" method="POST">
            <input
              class="main-input"
              type="text"
              name="name"
              placeholder="User Email"
              id="userName"
            />
            <p class="invalid-username">user name can't have spaces</p>
            <input
              class="main-input"
              type="password"
              name="pass"
              placeholder="password"
              id="pass"
            />
            <p class="invalid-pass">
              your password must contain a number, a sympol, and a capital
              letter
            </p>
            <input
              class="main-input"
              type="text"
              name="email"
              placeholder="email"
              id="email"
              required
            />
            <p class="un-pass-valid">user name cannot be same as password</p>
            <button type="submit">Sign up</button>
          </form>
        </div>
        <div class="sign-up">
          <h1>login</h1>
          <p>or if you have account sign in here</p>
          <button id="login_page_btn">login</button>
        </div>
      </div>
    </div>
    <!-- End contact -->
    <script src="/main.js"></script>
  </body>
</html>
